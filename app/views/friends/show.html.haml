%script
  = "$(document).ready(function () {"
  = "userCompass.userLocation(); userCompass.runCompass();"
  = "});" 
%div.container
  %h1
    =@friend.username

  %div
    %h3 Latitude
    %p#location_latitude
      = @friend.locations.last.latitude
    %h3 Longitude
    %p#location_longitude
      = @friend.locations.last.longitude

    %h3
    = @bearing

  %h2.page-header Current Location:
  %p
    Lat:
    %span#user_lat
  %p
    Lng:
    %span#user_lng
  %p
    bearing:
    %span#bearing
  %p
    distance:
    %span#distance
  %p
    heading:
    %span#heading
  %p
    webkit ios accuracy:
    %span#accuracy
  %p
    webkit ios alpha + bearing:
    %span#alphaWithBearing
  %p
    webkit ios alpha(north):
    %span#alpha
  %p
    andriod alpha + bearing:
    %span#webkitAlpha
  %p
    version:
    %span#version

  %p.log

%div.container#backgroundCompass
  %span#showDistance
  %div#compassContainer
    %i.fa.fa-arrow-up#compass
  %p
    =@friend.username was last seen at :   
  %span#timeStamp


